<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>mod_slider</name>
	<author>Niels van der Veer - Perfect Web Team</author>
	<creationDate>December 2015</creationDate>
	<copyright>Copyright (C) 2015 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@perfectwebteam.nl</authorEmail>
	<authorUrl>www.perfectwebteam.nl</authorUrl>
	<version>1.0.0</version>
	<description>MOD_SLIDER_XML_DESCRIPTION</description>
	<files>
		<folder>fields</folder>
		<folder>tmpl</folder>
		<filename module="mod_slider">mod_slider.php</filename>
		<filename>helper.php</filename>
	</files>
	<languages folder="language">
		<language tag="nl-NL">nl-NL/nl-NL.mod_slider.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.mod_slider.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset addfieldpath="/modules/mod_slider/fields/" name="basic">
				<field
					name="slides"
					type="slides"
					default=""
					label="MOD_SLIDER_SLIDE_SLIDES"
					description="MOD_SLIDER_SLIDE_SLIDES_DESC"
					multiple="true"
				/>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					default=""
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
